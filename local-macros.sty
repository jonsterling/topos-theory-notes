\newcounter{sarrow}
\newcommand\xleadsto[1]{%
  \stepcounter{sarrow}%
  \mathrel{
    \begin{tikzpicture}[baseline= {( $ (current bounding box.south) + (0,-0.5ex) $ )}]
      \node[inner sep=.5ex] (\thesarrow) {$\scriptstyle #1$};
      \path[draw,<-,decorate,
      decoration={snake,amplitude=0.7pt,segment length=1.2mm,pre=lineto,pre length=4pt}]
      (\thesarrow.south east) -- (\thesarrow.south west);
    \end{tikzpicture}
  }%
}

\newcommand\DefNotation[2]{\IMode{#1}\xleadsto{\textit{notation}}\OMode{#2}}
